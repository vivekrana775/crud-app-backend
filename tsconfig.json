{
    "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "types": [
        "node"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  